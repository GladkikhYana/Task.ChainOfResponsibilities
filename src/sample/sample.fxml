<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <AnchorPane prefHeight="350.0" prefWidth="500.0" style="-fx-background-color: FED6BC;">
         <children>
            <VBox fx:id="vbox_imp" prefHeight="190.0" prefWidth="294.0">
               <children>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="128.0" layoutY="2.0" prefHeight="33.0" prefWidth="372.0" text="Испытай свою удачу в игре!">
                           <font>
                              <Font name="Times New Roman" size="20.0" />
                           </font></Label>
                     </children>
                  </AnchorPane>
                  <ImageView fx:id="image" fitHeight="230.0" fitWidth="317.0" pickOnBounds="true" preserveRatio="true" />
                  <HBox prefHeight="34.0" prefWidth="500.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#on_pay" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: DEF7FE;" text="Кинь монетку " />
                              <Label text="  В нашем кошельке:  " />
                              <Label fx:id="l_count" text="??? " />
                              <Button mnemonicParsing="false" onAction="#on_start" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: DEF7FE;" text="Начать играть" />
                              <Label text="  В атомате:  " />
                              <Label fx:id="l_number" text="???" />
                           </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="vbox_quest" layoutX="322.0" layoutY="38.0" prefHeight="142.0" prefWidth="175.0" AnchorPane.rightAnchor="3.0">
               <children>
                  <Label text="Угадай, кто спрятан в сундуке?" />
                  <RadioButton fx:id="r_action" mnemonicParsing="false" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: FFFADD;" text="Сахарный поссум" />
                  <RadioButton fx:id="r_event" mnemonicParsing="false" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: FFFADD;" text="Белка" />
                  <RadioButton fx:id="r_gateways" mnemonicParsing="false" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: FFFADD;" text="Кот" />
                  <RadioButton fx:id="r_sf" mnemonicParsing="false" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: FFFADD;" text="Собака" />
                  <RadioButton fx:id="r_mf" mnemonicParsing="false" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: FFFADD;" text="Мышь" />
                  <Button mnemonicParsing="false" onAction="#on_fortune" prefHeight="18.0" prefWidth="136.0" style="-fx-background-color: DEF7FE;" text="Испытать удачу" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
